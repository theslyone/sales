@using MixERP.Sales.Extensions
@model long

@{
    ViewBag.Title = "Checklist";
    Layout = ViewBag.SalesLayoutPath;
}
@Html.FinancePartialView("Shared/Checklist.cshtml", TenantConvention.GetTenant())

<script>
    window.overridePath = "/dashboard/sales/tasks/entry";

    window.prepareChecklist({
        Title: "Sales Checklist #@Model",
        ViewText: "View Sales",
        ViewUrl: "/dashboard/sales/tasks/entry",
        AddNewText: "Add New Sales Entry",
        AddNewUrl: "/dashboard/sales/tasks/entry/new",
        ReportPath: "/dashboard/reports/source/Areas/MixERP.Sales/Reports/Invoice.xml?transaction_master_id=@Model"
    });
</script>