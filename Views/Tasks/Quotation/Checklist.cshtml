@using MixERP.Sales.Extensions
@model long

@{
    ViewBag.Title = "Checklist";
    Layout = ViewBag.SalesLayoutPath;
}

@Html.FinancePartialView("Shared/Checklist.cshtml", TenantConvention.GetTenant())

<script>
    window.overridePath = "/dashboard/sales/tasks/entry";

    window.prepareChecklist({
        Title: "Sales Quotation Checklist #@Model",
        ViewText: "View Sales Quotations",
        ViewUrl: "/dashboard/sales/tasks/quotation",
        AddNewText: "Add New Sales Quotation",
        AddNewUrl: "/dashboard/sales/tasks/quotation/new",
        ReportPath: "/dashboard/reports/source/Areas/MixERP.Sales/Reports/Quotation.xml?quotation_id=@Model"
    });

    $(".withdraw.button").remove();
</script>